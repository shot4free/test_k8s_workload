#!/usr/bin/env bash

##############################
# Removes the gitlab chart

set -euf -o pipefail
dir="$(cd "$(dirname "${0}")"; pwd)"

source "$dir/.setup.bash"
source "$dir/.gitlab.bash"

echo -ne "${_BRED}!! You are about to remove the $CHART chart on $CLUSTER in $ENV ($PROJECT) !!${_NORM}\\n"
echo -ne "press enter to continue."
read -rp ""
echo -e "${_CYN}continuing...${_NORM}"

opts=(
    "del"
    "--purge" "$NAME"
    "${HELM_OPTS[@]}"
)

set -x
helm tiller run helm "${opts[@]}" "$@"
